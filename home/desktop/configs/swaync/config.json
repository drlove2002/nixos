{
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",

  "control-center-width": 380,
  "control-center-height": 650,

  "timeout": 5,
  "timeout-low": 3,
  "timeout-critical": 15,
  "fit-to-screen": true,

  "notification-icon-size": 48,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,

  "widgets": [
    "title",
    "volume",
    "backlight",
    "mpris",
    "dnd",
    "notifications"
  ],

  "widget-config": {
    "title": {
      "text": "Control Center",
      "clear-all-button": true
    },

    "volume": {
      "show-output": true,
      "show-input": true,
      "step": 5
    },

    "backlight": {
      "step": 5
    },

    "mpris": {
      "image-size": 96,
      "blur": true,
      "show-album-art": true,
      "show-buttons": true,
      "show-progress": true
    },

    "dnd": {
      "text": "Do Not Disturb"
    }
  }
}
